---
import Layout from '../layouts/Layout.astro';
---

<Layout title="404 - Page Not Found" description="Page not found">
  <div class="container mx-auto px-4 py-16">
    <div class="max-w-2xl mx-auto text-center space-y-10">
      <div>
        <h1 class="text-6xl font-bold mb-6">404</h1>
        <p class="text-xl text-[var(--color-muted-foreground)] mb-10">
          Page not found
        </p>
      </div>
      
      <div>
        <a 
          href="/" 
          class="inline-block px-6 py-3 bg-[#5b3df5] text-white rounded-lg font-medium focus-visible:outline-2 focus-visible:outline-offset-2"
        >
          Back to Home
        </a>
      </div>
    </div>
  </div>
</Layout>

