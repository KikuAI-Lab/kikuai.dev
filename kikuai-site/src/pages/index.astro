---
import Layout from '../layouts/Layout.astro';

const siteUrl = 'https://kikuai.dev';

const organizationSchema = {
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "KikuAI Lab",
  "url": siteUrl,
  "logo": `${siteUrl}/og-image.png`,
  "description": "Autonomous AI micro-products laboratory",
  "email": "admin@kikuai.dev",
  "sameAs": []
};

const websiteSchema = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": "KikuAI Lab",
  "url": siteUrl,
  "description": "Autonomous AI micro-products laboratory",
  "publisher": {
    "@type": "Organization",
    "name": "KikuAI Lab"
  }
};
---

<Layout title="KikuAI Lab" description="Autonomous AI micro-products laboratory" ogImage={`${siteUrl}/og-image.png`}>
  <script type="application/ld+json" set:html={JSON.stringify(organizationSchema)} />
  <script type="application/ld+json" set:html={JSON.stringify(websiteSchema)} />
  <div class="container mx-auto px-4 py-16">
    <section class="text-center mb-20">
      <h1 class="mb-6">KikuAI Lab</h1>
      <p class="text-xl text-[var(--color-muted-foreground)] mb-10 mx-auto max-w-2xl">
        Autonomous AI micro-products
      </p>
      <div class="flex gap-4 justify-center flex-wrap">
        <a 
          href="/projects" 
          class="px-6 py-3 bg-[#5b3df5] text-white rounded-lg font-medium focus-visible:outline-2 focus-visible:outline-offset-2"
        >
          View Projects
        </a>
        <a 
          href="https://status.kikuai.dev" 
          target="_blank"
          rel="noopener noreferrer"
          class="px-6 py-3 border border-[var(--color-border)] rounded-lg hover:bg-[var(--color-muted)] font-medium focus-visible:outline-2 focus-visible:outline-offset-2"
        >
          Status
        </a>
      </div>
    </section>
    
    <section class="mb-20">
      <h2 class="mb-10 text-center">What we ship</h2>
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
        <div class="p-6 border border-[var(--color-border)] rounded-lg hover:border-[var(--color-accent)]">
          <h3 class="mb-3">One Function</h3>
          <p class="text-[var(--color-muted-foreground)]">
            Each product does one thing exceptionally well
          </p>
        </div>
        <div class="p-6 border border-[var(--color-border)] rounded-lg hover:border-[var(--color-accent)]">
          <h3 class="mb-3">Autonomous</h3>
          <p class="text-[var(--color-muted-foreground)]">
            Self-contained services that run independently
          </p>
        </div>
        <div class="p-6 border border-[var(--color-border)] rounded-lg hover:border-[var(--color-accent)]">
          <h3 class="mb-3">Market-First</h3>
          <p class="text-[var(--color-muted-foreground)]">
            Built to solve real problems, not just showcase tech
          </p>
        </div>
        <div class="p-6 border border-[var(--color-border)] rounded-lg hover:border-[var(--color-accent)]">
          <h3 class="mb-3">Open Source</h3>
          <p class="text-[var(--color-muted-foreground)]">
            Transparent, auditable, and community-driven
          </p>
        </div>
      </div>
    </section>
    
    <section>
      <h2 class="mb-8 text-center">Contact</h2>
      <div class="text-center text-[var(--color-muted-foreground)]">
        <p class="mx-auto">Coming soon</p>
      </div>
    </section>
  </div>
</Layout>
